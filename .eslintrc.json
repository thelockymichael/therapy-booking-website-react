{
    "root": true,
    "plugins": [
        "jest",
        "@typescript-eslint"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "tests/**/*.ts",
        "build/**/*",
        "client/**/*"
    ],
    "rules": {
        "semi": [2, "never"],
        "no-console": "error",
        "indent": ["error", 2]
    }
}
